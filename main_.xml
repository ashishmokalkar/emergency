<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        
        android:text="Send an Alert"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FF9900"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Press the button to send alert messages"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/button1"
        android:layout_marginTop="20dp"
        
        android:background="@drawable/btn_states"
        android:layout_gravity="center"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="" />

    <RelativeLayout 
        
        android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button9"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/bt_mic_ph_pressed" />

    <Button
        android:id="@+id/button8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/button9"
        android:background="@drawable/timer"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:background="@drawable/people" />

    <Button
        android:id="@+id/button7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_toLeftOf="@+id/button9"
        android:background="@drawable/email_edit" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp"
        android:background="@drawable/edit_contact" />

    <Button
        android:id="@+id/button4"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignLeft="@+id/button2"
        android:background="@drawable/bt_location_states" />

    <Button
        android:id="@+id/button6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/button7"
        android:layout_alignRight="@+id/button9"
        android:background="@drawable/edit_contact" />

    <Button
        android:id="@+id/button5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button8"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignLeft="@+id/button3"
        android:background="@drawable/locate" />
    
    </RelativeLayout> 
    
</LinearLayout>


<FrameLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    
    <!-- The navigation drawer -->
    <ListView android:id="@+id/drawerList"
      
        
        android:layout_width="240dp"
        android:layout_height="match_parent"
       
        android:layout_gravity="left"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#FFFFFF"/>
</android.support.v4.widget.DrawerLayout>
